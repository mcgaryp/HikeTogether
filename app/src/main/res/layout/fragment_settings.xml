<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:padding="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/settingsLayout"
        android:background="@drawable/rounded_button"
        android:padding="20dp"
        android:paddingBottom="25dp"
        >
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/profileImageLayout">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/place_holder_profile_img"
                android:layout_centerHorizontal="true"
                android:id="@+id/profileImage"
                android:padding="3dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profileImage"
                android:layout_centerHorizontal="true"
                android:text="Change Picture"
                android:id="@+id/changeProfilePictureButton"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profileImageLayout"
            android:id="@+id/firstNameLayout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:id="@+id/firstNameView"
                android:text="First Name"
                android:textSize="17dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/changeFirstNameButton"
                android:layout_below="@id/firstNameView"
                android:text="Change First Name"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="Users First Name"
                android:id="@+id/userFirstName"
                android:textSize="17dp"
                android:layout_below="@id/firstNameView"
                android:enabled="false"
                android:background="#FFF"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lastNameLayout"
            android:layout_below="@+id/firstNameLayout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:id="@+id/lastNameView"
                android:text="Last Name"
                android:textSize="17dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/changeLastNameButton"
                android:text="Change Last Name"
                android:layout_below="@id/lastNameView"/>

            <EditText
                android:id="@+id/userLastName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lastNameView"
                android:layout_alignParentEnd="true"
                android:enabled="false"
                android:background="#FFF"
                android:text="Users Last Name"
                android:textSize="17dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/emailLayout"
            android:layout_below="@+id/usernameLayout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:id="@+id/emailView"
                android:text="E-Mail"
                android:textSize="17dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/changeEmailButton"
                android:layout_below="@+id/emailView"
                android:text="Change E-Mail"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="User E-Mail"
                android:id="@+id/userEmail"
                android:textSize="17dp"
                android:layout_below="@id/emailView"
                android:enabled="false"
                android:background="#FFF"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/usernameLayout"
            android:layout_below="@+id/lastNameLayout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:id="@+id/usernameView"
                android:text="Username"
                android:textSize="17dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/changeUsernameButton"
                android:layout_below="@id/usernameView"
                android:text="Change Username"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="User Username"
                android:id="@+id/userUsername"
                android:textSize="17dp"
                android:layout_below="@+id/usernameView"
                android:background="#FFF"
                android:enabled="false"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/backgroundChangeLayout"
            android:layout_below="@+id/emailLayout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:id="@+id/changeBackgroundView"
                android:text="Change Background"
                android:textSize="17dp"/>
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:id="@+id/backgroundSpinner"
                android:scrollbarSize="17dp"
                android:entries="@array/backgroundArray"
                android:layout_below="@id/changeBackgroundView"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/searchDistanceLayout"
            android:layout_below="@+id/backgroundChangeLayout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:id="@+id/searchDistanceView"
                android:text="Change Trail Search Distance"
                android:textSize="17dp"/>
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:id="@+id/distanceSpinner"
                android:scrollbarSize="17dp"
                android:entries="@array/distanceArray"
                android:layout_below="@id/searchDistanceView"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/searchDistanceLayout"
            android:id="@+id/passwordButtonLayout">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/changePasswordButton"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:text="Change Password"/>
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>