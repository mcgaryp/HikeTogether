<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:padding="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/settingsLayout"
        android:background="@drawable/rounded_button"
        android:padding="20dp"
        android:paddingBottom="25dp"
        >
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/profileImageLayout">

            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:contentDescription="@string/profile_picture"
                android:padding="3dp"
                android:src="@drawable/place_holder_profile_img" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profileImage"
                android:layout_centerHorizontal="true"
                android:text="@string/edit"
                android:id="@+id/changeProfilePictureButton"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profileImageLayout"
            android:id="@+id/firstNameLayout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:id="@+id/firstNameView"
                android:text="@string/first_name"
                android:textSize="17sp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/changeFirstNameButton"
                android:layout_below="@id/firstNameView"
                android:text="@string/edit"/>

            <com.e.hiketogether.Views.SpecializedViews.UniqueEditText
                android:id="@+id/userFirstName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/firstNameView"
                android:layout_alignParentEnd="true"
                android:background="#FFF"
                android:enabled="false"
                android:selectAllOnFocus="true"
                android:text="@string/users_first_name"
                android:textSize="17sp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lastNameLayout"
            android:layout_below="@+id/firstNameLayout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:id="@+id/lastNameView"
                android:text="@string/last_name"
                android:textSize="17sp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/changeLastNameButton"
                android:text="@string/edit"
                android:layout_below="@id/lastNameView"/>

            <com.e.hiketogether.Views.SpecializedViews.UniqueEditText
                android:id="@+id/userLastName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lastNameView"
                android:layout_alignParentEnd="true"
                android:background="#FFF"
                android:enabled="false"
                android:selectAllOnFocus="true"
                android:text="@string/users_last_name"
                android:textSize="17sp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/emailLayout"
            android:layout_below="@+id/usernameLayout">

            <TextView
                android:id="@+id/emailView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="@string/e_mail"
                android:textSize="17sp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/changeEmailButton"
                android:layout_below="@+id/emailView"
                android:text="@string/edit"/>

            <com.e.hiketogether.Views.SpecializedViews.UniqueEditText
                android:id="@+id/userEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/emailView"
                android:layout_alignParentEnd="true"
                android:background="#FFF"
                android:enabled="false"
                android:selectAllOnFocus="true"
                android:text="@string/user_e_mail"
                android:textSize="17sp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/usernameLayout"
            android:layout_below="@+id/lastNameLayout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:id="@+id/usernameView"
                android:text="@string/username"
                android:textSize="17sp"/>

            <com.e.hiketogether.Views.SpecializedViews.UniqueEditText
                android:id="@+id/userUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/usernameView"
                android:layout_alignParentEnd="true"
                android:background="#FFF"
                android:enabled="false"
                android:selectAllOnFocus="true"
                android:text="@string/user_username"
                android:textSize="17sp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/backgroundChangeLayout"
            android:layout_below="@+id/emailLayout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:id="@+id/changeBackgroundView"
                android:text="@string/change_background"
                android:textSize="17sp"/>
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:id="@+id/backgroundSpinner"
                android:scrollbarSize="17dp"
                android:entries="@array/backgroundArray"
                android:layout_below="@id/changeBackgroundView"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/searchDistanceLayout"
            android:layout_below="@+id/backgroundChangeLayout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:id="@+id/searchDistanceView"
                android:text="@string/change_trail_search_distance"
                android:textSize="17sp"/>
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:id="@+id/distanceSpinner"
                android:scrollbarSize="17dp"
                android:entries="@array/distanceArray"
                android:layout_below="@id/searchDistanceView"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/searchDistanceLayout"
            android:id="@+id/passwordButtonLayout">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/changePasswordButton"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:text="@string/change_password"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/expandedPassword"
            android:layout_below="@+id/passwordButtonLayout">

            <com.e.hiketogether.Views.SpecializedViews.UniqueEditText
                android:id="@+id/passwordSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:hint="@string/new_password"
                android:inputType="textPassword"
                android:textAlignment="center"
                android:importantForAutofill="no" />

            <com.e.hiketogether.Views.SpecializedViews.UniqueEditText
                android:id="@+id/verifyPasswordSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/passwordSettings"
                android:layout_centerHorizontal="true"
                android:hint="@string/verify_new_password"
                android:inputType="textPassword"
                android:textAlignment="center"
                android:importantForAutofill="no" />
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>